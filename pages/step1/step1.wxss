  z-index: 10;
}
.usertext_wrapper{
  margin-top: 105px;

}
.usertitle{
  position: fixed;
  height: 30px;
  color: #90f6ff;
}
.touxiang{
  width: 80px;
  height: 80px;
}
.usertext{
  padding: 5px 5px 5px 20px;
  /* float: left; */
  width: 100%;
  display: block;
  color: #FFF;
  text-align: left;
  box-sizing: border-box;
}
.gongneng{
  box-sizing: border-box;
  background: #FFF;
  width: 100%;
  padding: 0 30rpx;
}
.li{
  box-sizing: border-box;
  padding: 30rpx;
