padding:10px 10px 0px 10px ;
box-sizing: border-box;
}
.thinghead{
width: 100%;

}
.img{
  float: left;
  background:#93c3e4;
  width:70rpx;
  height:70rpx;
  position:relative;
  padding:10rpx;
  border-radius:10rpx;
    display: flex;
    box-sizing: border-box;
/*水平居中*/
justify-content: center;
/*垂直居中*/
align-items: center;
}
.name-wrapper{
  height:70rpx;
  float: left;
}
.name , .time{
  display: block;
line-height: 35rpx;
padding: 0 0 0 20rpx;
  font-size: 12px;
  height: 35rpx;
  box-sizing: border-box;
}
.thing{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding:40rpx 40rpx 40rpx 90rpx;
  border-bottom: 1px solid #f3f3f4;
text-align: left;
}
.button{
  display: flex;
  padding: 10rpx;
}
.thingbt{
  flex: 1;
  padding: 20rpx;
  text-align: center;
  color: #4169E1;
  font-size: 12px;
}

.menu-bt{
  padding:5px;
